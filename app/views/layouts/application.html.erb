<!DOCTYPE html>
<html>
  <head>
    <title>GigMemsApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
            <ul>

            <% if @current_user %>
            <li><a href="/items">Search</a></li>
              <li><%= link_to "Log Out", "/logout", method: :delete %></li>
              <li><a href= "<%= user_path(@current_user) %>">Hi <%= @current_user.first_name %> <span id="megryan" class="test new badge light-green lighten-3" data-badge-caption="Mail"></span></a></li>

            <% else %>
              <li><a href="/login">Log In</a></li>
              <li><a href="/users/new">Sign Up</a></li>
            <% end %>
          </ul>
    <%= yield %>
  </body>
</html>
