<div class="container">
<div class="scroll">
  <h4>Chat with <%= @other_user.username %></h4>
  <% if @chatroom.messages.any? %>
    <div id="messages">
      <%= render partial: 'messages/message', collection: @chatroom.messages.order(id: :asc)%>
    </div>
  <%else%>
    <div id="messages">
    </div>
  <%end%>
</div>

<%= render partial: 'messages/message_form', locals: {message: @message, chat: @chatroom}%>

<p><%= link_to "Back to your profile page", user_path(current_user.id) %></p>
</div>

<script>
  createMessageChannel();
  messageForm();

  //defaults scrolling to bottom
  $(".scroll").scrollTop($(".scroll")[0].scrollHeight);
</script>
